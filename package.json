{
  "name": "web-document-scanner",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "start": "cross-env NODE_ENV=development concurrently \"npm run dev:vite\" \"npm run dev:server\"",
    "dev:vite": "vite --host",
    "dev:server": "node server/index.cjs",
    "build": "tsc && vite build && npm run build:server",
    "build:server": "browserify --node --ignore-missing server/index.cjs > dist/server.js",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview"
  },
  "dependencies": {
    "@react-pdf/renderer": "^3.1.14",
    "axios": "^1.6.2",
    "body-parser": "^1.20.2",
    "browserify": "^17.0.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "express": "^4.18.2",
    "http-proxy-middleware": "^2.0.6",
    "imagescript": "^1.2.17",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sass": "^1.69.5",
    "usehooks-ts": "^2.9.1",
    "vite-plugin-singlefile": "^0.13.5"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "typescript": "^5.2.2",
    "vite": "^5.0.8"
  }
}
